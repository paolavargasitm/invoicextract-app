									"// Fechas aleatorias dentro de los últimos 30 días\r",
									"function randomDate(start, end) {\r",
									"  return new Date(start.getTime() + Math.random() * (end.getTime() - start.getTime()));\r",
									"}\r",
									"\r",
									"const issueDate = randomDate(new Date(2024, 7, 1), new Date(2024, 7, 30)); // agosto\r",
									"const dueDate = new Date(issueDate);\r",
									"dueDate.setDate(dueDate.getDate() + 30);\r",
									"\r",
