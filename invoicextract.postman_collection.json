			"item": [
				{
					"name": "Create or Update Email Configuration",
					"request": {
						"method": "POST",
						"header": [],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"username\": \"my-email@example.com\",\n  \"password\": \"a-very-secret-password\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
