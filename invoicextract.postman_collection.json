					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/v1/invoices?includeMetadata=true",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"v1",
								"invoices"
							],
							"query": [
								{
									"key": "includeMetadata",
									"value": "true"
								}
							]
						}
					},
					"response": []
				},
				{
