					"response": []
				},
				{
					"name": "Create Invoice",
					"request": {
						"method": "POST",
						"header": [],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"cude\": \"CUFE-123456789\",\n  \"email\": \"test@example.com\",\n  \"date\": \"2024-08-03T19:45:00\",\n  \"status\": \"PENDING\",\n  \"type\": \"INVOICE\",\n  \"metadata\": {\n    \"totalAmount\": 1500.75,\n    \"currency\": \"USD\",\n    \"paymentMethod\": \"Credit Card\"\n  }\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{baseUrl}}/api/v1/invoices",
							"host": [
								"{{baseUrl}}"
							],
							"path": [
								"api",
								"v1",
								"invoices"
							]
						}
					},
					"response": []
				},
				{
					"name": "Update Invoice Status",
					"request": {
						"method": "PATCH",
						"header": [],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"status\": \"APPROVED\"\n}",
							"options": {
								"raw": {
									"language": "json"
								}
							}
						},
						"url": {
							"raw": "{{baseUrl}}/api/v1/invoices/1/status",
