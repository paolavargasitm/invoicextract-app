# =============================================================================
# Test Credentials by Role
# =============================================================================
# Admin user (for test automation)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin

# Finance user
FINANCE_USERNAME=finance_user
FINANCE_PASSWORD=finance_password

# Technician user
TECHNICIAN_USERNAME=technician_user
TECHNICIAN_PASSWORD=technician_password

# =============================================================================
# Database Configuration
# =============================================================================
# MySQL - Main Application Database
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_DATABASE=invoices_db
MYSQL_USER=invoices_user
MYSQL_PASSWORD=invoices_password

# MySQL - Mappings Database
MYSQL_MAPPINGS_HOST=localhost
MYSQL_MAPPINGS_PORT=3307
MYSQL_MAPPINGS_DATABASE=invoices_mappings
MYSQL_MAPPINGS_USER=mappings_user
MYSQL_MAPPINGS_PASSWORD=mappings_password

# =============================================================================
# Kafka Configuration
# =============================================================================
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC_INVOICE_PROCESSING=invoice-processing
KAFKA_TOPIC_EMAIL_NOTIFICATIONS=email-notifications
KAFKA_CONSUMER_GROUP=invoicextract-consumers

# =============================================================================
# Email Configuration (Optional)
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_ADDRESS=noreply@invoicextract.com
SMTP_FROM_NAME=InvoiceExtract System

# =============================================================================
# Test Automation Configuration
# =============================================================================
# Browser configuration for Playwright
HEADLESS=true
BROWSER=chromium
SLOWMO=0

# Test timeouts (milliseconds)
TEST_TIMEOUT=30000
NAVIGATION_TIMEOUT=30000

# Screenshot configuration
SCREENSHOT_ON_FAILURE=true
SCREENSHOT_PATH=./test-results/screenshots

# =============================================================================
# AWS Configuration (if using AWS services)
# =============================================================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
S3_BUCKET_NAME=invoicextract-documents

# =============================================================================
# Application Configuration
# =============================================================================
# Environment: development, staging, production
ENVIRONMENT=development

# Logging level: DEBUG, INFO, WARN, ERROR
LOG_LEVEL=INFO

# Feature flags
FEATURE_EMAIL_PROCESSING=true
FEATURE_KAFKA_INTEGRATION=true
FEATURE_DOCUMENT_STORAGE=false

# =============================================================================
# Security Configuration
# =============================================================================
# JWT Configuration
JWT_SECRET=your-jwt-secret-key-change-in-production
JWT_EXPIRATION=3600

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3001,http://localhost:3000

# =============================================================================
# IMPORTANT NOTES
# =============================================================================
# 1. DO NOT commit this file with real credentials to version control
# 2. Add .env to .gitignore
# 3. Use different values for each environment (dev, staging, production)
# 4. Rotate secrets regularly in production
# 5. Use environment-specific secret management (AWS Secrets Manager, Vault, etc.)
# 6. The CLIENT_SECRET shown here is for DEVELOPMENT/TESTING ONLY
